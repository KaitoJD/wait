{
  "name": "wait",
  "version": "1.4.0",
  "description": "WAIT - Weather App In Terminal.",
  "main": "dist/app.js",
  "bin": {
    "wait": "./dist/app.js"
  },
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "build:pkg": "tsc && pkg package.json",
    "build:secure": "node scripts/build-secure.js",
    "build:secure:skip-pkg": "node scripts/build-secure.js --skip-pkg",
    "dev": "ts-node src/app.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "blessed": "^0.1.81",
    "dotenv": "^17.3.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.27",
    "@types/node": "^25.2.3",
    "@yao-pkg/pkg": "^6.13.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "weather",
    "tui",
    "typescript",
    "terminal"
  ],
  "author": "Nguyen Sy Nguyen",
  "license": "CC BY-NC-SA 4.0",
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/axios/dist/node/axios.cjs",
      "node_modules/axios/package.json",
      "node_modules/blessed/**/*"
    ],
    "targets": [
      "node20-win-x64",
      "node20-macos-x64",
      "node20-linux-x64"
    ],
    "outputPath": "releases"
  }
}
