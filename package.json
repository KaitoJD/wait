{
  "name": "wait",
  "version": "1.0.0",
  "description": "WAIT - Weather App In Terminal.",
  "main": "dist/app.js",
  "bin": {
    "wait": "./dist/app.js"
  },
  "scripts": {
    "start": "ts-node src/app.ts",
    "build": "tsc",
    "build:pkg": "tsc && pkg package.json",
    "dev": "ts-node src/app.ts",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "blessed": "^0.1.81",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.21",
    "@types/node": "^20.0.0",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "weather",
    "tui",
    "typescript",
    "terminal"
  ],
  "author": "Nguyen Sy Nguyen",
  "license": "CC BY-NC-SA 4.0",
  "pkg": {
    "scripts": [
      "dist/**/*.js"
    ],
    "assets": [
      "node_modules/axios/dist/node/axios.cjs",
      "node_modules/axios/package.json",
      "node_modules/blessed/**/*"
    ],
    "targets": [
      "node18-win-x64",
      "node18-macos-x64", 
      "node18-linux-x64"
    ],
    "outputPath": "releases"
  }
}
